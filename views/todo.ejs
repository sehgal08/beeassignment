<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
</head>
<body>
    <h1>Todo List</h1>
    <form action="/add-task" method="POST">
        <input type="text" name="task" placeholder="Enter tasks" required />
        <button type="submit">Add Task</button>
    </form>
    <ul>
        <% tasks.forEach((task, index) => { %>
            <li>
                <%= task %>
                <form action="/delete-task/<%= index %>" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>